@model IEnumerable<MedicalManagement.Domain.Entities.Bairro>

@{
    ViewBag.Title = "Bairro";
}

<h2>Bairros</h2>

<p>
    @Html.ActionLink("Cadastrar bairro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Cidade
        </th>
        <th>
            Bairro
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cidade.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.BairroId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.BairroId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.BairroId })
        </td>
    </tr>
}

</table>
