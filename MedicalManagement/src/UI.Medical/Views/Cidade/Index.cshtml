@model IEnumerable<MedicalManagement.Domain.Entities.Cidade>

@{
    ViewBag.Title = "Cidade";
}

<h2>Cidades</h2>

<p>
    @Html.ActionLink("Cadastrar Cidade", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Estado
        </th>
        <th>
            Cidade
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Uf.Sigla)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CidadeId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.CidadeId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.CidadeId })
        </td>
    </tr>
}

</table>
